# Backend settings - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Authentication Configuration
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
API_ISSUER=https://YOUR-PROJECT.supabase.co/auth/v1
# Optional:
# SUPABASE_JWKS_URL=
# API_AUDIENCE=

# API Configuration
RATE_LIMIT_PER_MINUTE=240
BASE_PATH=/api

# Database Configuration
# For development (SQLite)
SQLALCHEMY_DATABASE_URL=sqlite:///./local_dev.db
# For production (PostgreSQL)
# SQLALCHEMY_DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/insurance

# OpenAI Configuration (REQUIRED for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration (production)
SECRET_KEY=your_jwt_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development Mode
LOCAL_DEV=true

# Optional external insurer aggregator
INSURER_API_BASE=
INSURER_API_KEY=